<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.goodcodeforfun.isairclean.activities.DetailActivity$PlaceholderFragment">

        <TextView
            android:id="@+id/detailCurrentLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_label"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detailCurrentCarbonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailCurrentCarbonLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tonns_co2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailCurrentEnergyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailCurrentEnergyLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mwh_energy"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailCurrentIntensityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailCurrentIntensityLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg_co2_per_mwh"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/detailFutureLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/future_label"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/detailFutureCarbonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailFutureCarbonLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tonns_co2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailFutureEnergyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailFutureEnergyLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mwh_energy"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailFutureIntensityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/detailFutureIntensityLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg_co2_per_mwh"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
